<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        app:srcCompat="@drawable/ic_logo_login" />
  <View
      android:background="@color/black"
      android:layout_width="match_parent"
      android:layout_height="85dp"></View>
    <TextView
        android:layout_width="match_parent"
        android:text="Bienvenido a"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="36dp"
        android:fontFamily="sans-serif-black"
        android:textAlignment="viewStart"
        android:background="@color/black"></TextView>
    <TextView
        android:layout_width="match_parent"
        android:text="Cumbra"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="36dp"
        android:fontFamily="sans-serif-black"
        android:textAlignment="viewStart"
        android:background="@color/black"></TextView>

  <TextView
      android:layout_width="255dp"
      android:layout_height="wrap_content"
      android:background="@color/black"
      android:fontFamily="sans-serif"
      android:paddingTop="20dp"
      android:text="@string/acerca_de"
      android:textAlignment="viewStart"
      android:textColor="@color/Neutral_light"
      android:textSize="20dp"></TextView>

  <EditText
      android:drawableLeft="@drawable/ic_profile"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="45dp"
      android:height="45dp"
      android:background="@drawable/borde"
      android:paddingLeft="10dp"
      android:hint="   Username"
      android:textColorHint="@color/white"
      android:textColor="@color/white" />

  <EditText
      android:drawableLeft="@drawable/ic_lock"
      android:drawableRight="@drawable/ic_eye_slash"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingLeft="10dp"
      android:paddingRight="10dp"
      android:layout_marginTop="25dp"
      android:height="45dp"
      android:background="@drawable/borde"
      android:textColorHint="@color/white"
      android:hint="   Password"
      android:textColor="@color/white" />

  <Button android:layout_marginTop="45dp"
      android:padding="15dp"
      android:layout_width="match_parent"
      android:text="Iniciar Session"
      android:layout_height="wrap_content">


  </Button>
</LinearLayout>